#!/bin/bash

USAGE=$(cat <<EOF
Usage: kube <Command> <[User@]Hostname> [Args]
       kube <Command> help

Commands
    tools
    node
    user
EOF
)

function main {
    case "$1 $2" in
        "$1 help")
            local UNIT="$1"
            "$(workdir)/kube-${UNIT}"
        ;;
        "$1 $2")
            local UNIT="$1"
            local TARGET="$2"
            shift 2

            if [ -z "${UNIT}" ] || \
               [ -z "${TARGET}" ]; then usage; fi

            ssh "${TARGET}" bash -s "$@" < "$(workdir)/kube-${UNIT}"
        ;;
        *) usage ;;
    esac
}

function workdir {
    dirname "$0"
}

function usage {
    >&2 echo "${USAGE}"
    exit 2
}

main "$@"
